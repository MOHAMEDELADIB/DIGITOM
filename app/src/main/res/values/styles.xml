<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="fontFamily">@font/siemens</item>
        <!--<item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.MaterialComponents.Light" />

    <style name="navigate">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/siemens</item>
    </style>

    <style name="AppTheme.Test" parent="AppTheme">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/inbox_accent</item>
        <item name="colorControlActivated">@color/material_purple_500</item>
        <item name="colorControlHighlight">@color/inbox_accent</item>
    </style>

    <style name="MaterialButtonStyle.Bordered" parent="Widget.AppCompat.Button.Borderless">
        <item name="strokeWidth">@dimen/material_button_stroke_bordered</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/material_button_ripple_color</item>
        <item name="cornerRadius">@dimen/material_button_corner_radius</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/material_button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
